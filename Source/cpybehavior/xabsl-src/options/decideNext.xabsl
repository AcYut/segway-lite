option decideNext
	{
		initial state search
			{
				decision
				{
					if(facefound==1)
						goto move;
					else
						stay;
				}
				action
					{
						doSearch();
					}

			}
		state move
			{
				decision
					{
						if(facefound!=1)
							goto search;
						else stay;
					}
				action
					{
						doMove();
					}
			}

	}